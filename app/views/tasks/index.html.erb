<h1>タスク一覧</h1>
<h3>ユーザー名: <%= current_user.name %></h3>
<div class="row">
  <aside class="col-sm-4">
    <%= form_with(model: @task, local: true) do |f| %>
    <%= render "layouts/error_messages", model: f.object %>
      <div class="form-group">
        <%= f.label :status, "ステータス" %>
        <%= f.text_field :status, class: "form-control", rows: 1 %>
      </div>
      <div class="form-group">
        <%= f.label :content, "内容" %>
        <%= f.text_area :content, class: "form-control", rows: 5 %>
      </div>
      <%= f.submit "タスク作成", class: "btn btn-primary btn-block" %>
    <% end %>
  </aside>
  <div class="col-sm-8">
    <%= render "tasks/tasks", tasks: @tasks %>
  </div>
</div>

<%= link_to "ログアウトする", logout_path, method: :delete %>
